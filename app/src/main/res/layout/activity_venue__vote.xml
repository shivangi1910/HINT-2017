<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shivangi.reunion.Venue_Vote">


    <Button
        android:id="@+id/Votebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upvote"
        android:onClick="Vote"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="212dp"
        />


    <TextView
        android:id="@+id/noOfVotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Votebutton"
        android:layout_marginBottom="78dp"
        android:layout_marginLeft="50dp"
        android:text="0"
        android:ems="20"
        android:layout_alignRight="@+id/Votebutton"
        android:layout_alignEnd="@+id/Votebutton"
        android:layout_alignLeft="@+id/Votebutton"
        android:layout_alignStart="@+id/Votebutton" />
</RelativeLayout>
